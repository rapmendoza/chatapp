<div class="container">
  <h1>Dashboard</h1>
  <div class="row">
    <div class="col-md-3">
      <ul class="nav nav-pills nav-stacked">
        <li role="presentation">
          <%= link_to 'Home', admin_dashboard_path %>
        </li>
        <li role="presentation" class="active">
          <%= link_to 'Users', admin_users_path %>
        </li>
        <li role="presentation">
          <%= link_to 'Messages', admin_messages_path %>
        </li>
      </ul>
    </div>
    <div class="col-md-9">
      <div class="col-sm-8">
        <h2>Edit User</h2>
        <%= form_for @user, :url => admin_user_path do |f| %>
          <div class="alert alert-danger" role="alert">
            <%= @user.errors.messages %>
          </div>
          <div class="form-group">
            <%= f.label :first_name %>
            <%= f.text_field :first_name, :class => 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :last_name %>
            <%= f.text_field :last_name, :class => 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :username %>
            <%= f.text_field :username, :class => 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.hidden_field :is_admin, :class => 'form-control' %>
            <%= f.submit :Save, :class => 'btn btn-primary' %>
            <%= link_to 'Cancel', admin_users_path, :class => 'btn btn-default' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
