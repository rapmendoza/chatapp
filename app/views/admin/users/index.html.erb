<div class="container">
  <h1>Dashboard</h1>
  <div class="row">
    <div class="col-md-3">
      <ul class="nav nav-pills nav-stacked">
        <li role="presentation">
          <%= link_to 'Home', admin_dashboard_path %>
        </li>
        <li role="presentation" class="active">
          <%= link_to 'Users', admin_users_path %>
        </li>
        <li role="presentation">
          <%= link_to 'Messages', admin_messages_path %>
        </li>
      </ul>
    </div>
    <div class="col-md-9">
      <table class="table">
        <thead>
          <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Username</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |u| %>
            <tr>
              <td><%= u.first_name %></td>
              <td><%= u.last_name %></td>
              <td><%= u.username %></td>
              <td>
                <%= link_to "Edit", edit_admin_user_path(u.id), :class => "btn btn-default" %>
                <%= link_to "Delete", admin_user_path(u.id), method: :delete,
                    data: {
                      confirm: "Are you sure you want to delete #{u.first_name} #{u.last_name}?"
                    },
                    :class => "btn btn-default" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
