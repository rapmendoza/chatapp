<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">

      <h1>Profile</h1>
        <div class="panel panel-default">
          <div class="panel-heading">
            First Name
          </div>
          <div class="panel-body">
            <%= @user.first_name %>
          </div>
        </div>
        <div class="panel panel-default">
          <div class="panel-heading">
            Last Name
          </div>
          <div class="panel-body">
            <%= @user.last_name %>
          </div>
        </div>
        <div class="panel panel-default">
          <div class="panel-heading">
            Username
          </div>
          <div class="panel-body">
            <%= @user.username %>
          </div>
        </div>
        <%= if current_user.is_admin == true %>
          <div class="btn-group">
            <%= link_to "Go to Users", users_path, :class => "btn btn-default" %>
          </div>
          <div class="btn-group">
            <%= link_to "Go to Messages", messages_path, :class => "btn btn-default" %>
          </div>
        <% else %>
        <div class="btn-group">
          <%= link_to "Go back to Messages", root_path, :class => "btn btn-default" %>
        </div>
        <% end %>
    </div>
  </div>
</div>
